{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "strict": true,
        "target": "es2018",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018"
        ]
    }
}